{{#extends "base"}}

{{#block "content"}}
<h1>Shopping Cart</h1>
{{#each cartItems}}
<div class="card">
    <div class="card-body">
        <div class="card-title">
            <div class="d-flex align-items-center">
                <img src="{{this.product.image_url}}" style="width: 150px"
                    class="img-thumbnail img-fluid" />
                <h2>{{this.product.name}}</h2>
            </div>
            <form method="POST" action="/cart/{{product_id}}/updateQuantity">
                <input type="hidden" name="_csrf" value="{{../csrfToken}}"/>
                Quantity: <input type="number" value="{{quantity}}"
                    name="newQuantity" style="width:50px" />
                <input type="submit" value="Update Quantity"
                    class="btn btn-success btn-sm" />
            </form>

            <div>
                <a href="/cart/{{this.product_id}}/remove"
                    class="mt-3 btn btn-danger btn-sm">Remove</a>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{/block}}

{{/extends}}